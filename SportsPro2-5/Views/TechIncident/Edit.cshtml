@model Incident

<h1>Edit Incident</h1>

<form asp-action="Edit" method="post">

    <input asp-for="IncidentID" hidden />
    <input asp-for="TechnicianID" hidden />
    <input asp-for="Title" hidden />
    <input asp-for="CustomerID" hidden />
    <input asp-for="ProductID" hidden />
    <input asp-for="DateOpened" hidden />

    <div class="form-group">
        <label asp-for="Technician">Technician</label>
        <input type="text" class="form-control" value="@Model.Technician?.Name" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" value="@Model.Title" readonly />
    </div>

    <div class="form-group">
        <label asp-for="CustomerID">Customer</label>
        <input type="text" class="form-control" value="@Model.Customer?.FullName" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ProductID">Product</label>
        <input type="text" class="form-control" value="@Model.Product?.Name" readonly />
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        <input type="text" class="form-control" value="@Model.DateOpened" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" class="form-control" />
        <span asp-validation-for="DateClosed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>