@model Product

@{
    string title = ViewBag.Action == "Add" ? "Add Product" : "Edit Product";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    
    <!-- **FOR DEBUGGING
        <div class="form-group">
            <label asp-for="ProductID">ID</label>
            <input asp-for="ProductID" class="form-control" readonly>
        </div>
        -->

    <input type="hidden" asp-for="ProductID">

    <div class="form-group mb-3">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control mt-1">
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control mt-1">
    </div>

    <div class="form-group mb-3">
        <label asp-for="YearlyPrice">Price</label>
        <input asp-for="YearlyPrice" class="form-control mt-1">
    </div>

    <div class="form-group mb-3">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control mt-1" value="@Model.ReleaseDate.ToString("yyyy-MM-dd HH:mm:ss")">
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
