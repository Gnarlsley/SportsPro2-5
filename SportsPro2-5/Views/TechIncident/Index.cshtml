@{
}
@model Technician

@{
    ViewBag.Title = "Technician";
}

<h1>@ViewBag.Title</h1>

<form asp-action="List" method="post">
    <select asp-for="TechnicianID" class="form-control" name="TechnicianID" required>
        <option value="">Select a Technician</option>
        @foreach (Technician t in ViewBag.Technicians)
        {
            <option value="@t.TechnicianID">@t.Name</option>
        }
    </select>

    <p class="row">
        <div class="align-items-center col-md-6">
            <button type="submit" class="btn btn-primary">Select Technician</button>
        </div>
    </p>
</form>