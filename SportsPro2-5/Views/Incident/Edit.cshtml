@model Incident

@{
    string title = ViewBag.Action + "Incident";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="IncidentID" type="hidden">

    <div class="form-group">

        <label asp-for="CustomerID">Customer</label>

        <select asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName", Model.CustomerID.ToString()))" class="form-control">
            <option value="">Select a customer</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ProductID">Product</label>
        <select asp-for="ProductID" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name", Model.ProductID.ToString()))" class="form-control">
            <option>Select a product</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TechnicianID">Technician</label>
        <select asp-for="TechnicianID" asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianID", "Name", Model.TechnicianID.ToString()))" class="form-control">
            <option value="">Select a technician</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date Opened</label>
        <input asp-for="DateOpened" class="form-control" value="@Model.DateOpened.ToString("yyyy-MM-dd HH:mm:ss")">
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" class="form-control">
    </div>


    <div class="mt-2">
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Incident" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>

</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
